@page "/customers/view-artisan/{ArtisanId:int}/{OrderId:int}"
@inject NavigationService Navigator
@inject ArtisanService ArtisanService
@inject AuthService AuthStateService
@inject OrderService OrderService
@inject NotificationService ToastService

<PageTitle>Artisan Profile View</PageTitle>

<CustomerViewArtisanLayout @ref="artisanLayout" Artisan="Artisan"></CustomerViewArtisanLayout>

<!--begin::details View-->
<div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
	<!--begin::Card header-->
	<div class="card-header cursor-pointer">
		<!--begin::Card title-->
		<div class="card-title m-0">
			<h3 class="fw-bolder m-0">Profile Details</h3>
		</div>
		<!--end::Card title-->
		<!--begin::Action-->
		<div class="mt-auto mb-auto">
			<button class="btn float-end btn-primary align-self-center me-1"
					disabled="@IsLoading" @onclick="AssignArtisan">Assign</button>
		</div>
		<!--end::Action-->
	</div>
	<!--begin::Card header-->
	<!--begin::Card body-->
	<div class="card-body p-9">
		<!--begin::Row-->
		<div class="row mb-7">
			<!--begin::Label-->
			<label class="col-lg-4 fw-bold text-muted">Full Name</label>
			<!--end::Label-->
			<!--begin::Col-->
			<div class="col-lg-8">
				<span class="fw-bolder fs-6 text-gray-800">@Artisan?.User?.DisplayName</span>
			</div>
			<!--end::Col-->
		</div>
		<!--end::Row-->
		<!--begin::Input group-->
		<div class="row mb-7">
			<!--begin::Label-->
			<label class="col-lg-4 fw-bold text-muted">Company</label>
			<!--end::Label-->
			<!--begin::Col-->
			<div class="col-lg-8 fv-row">
				<span class="fw-bold text-gray-800 fs-6">@Artisan?.BusinessName</span>
			</div>
			<!--end::Col-->
		</div>
		<!--end::Input group-->
		<!--begin::Input group-->
		<div class="row mb-7">
			<!--begin::Label-->
			<label class="col-lg-4 fw-bold text-muted">Contact Phone
			<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="Phone number must be active"></i></label>
			<!--end::Label-->
			<!--begin::Col-->
			<div class="col-lg-8 d-flex align-items-center">
				<span class="fw-bolder fs-6 text-gray-800 me-2">044 3276 454 935</span>
				<span class="badge badge-success" disabled="@Artisan?.IsVerified">Verified</span>
			</div>
			<!--end::Col-->
		</div>
		<!--end::Input group-->
		
		<!--begin::Input group-->
		<div class="row mb-7">
			<!--begin::Label-->
			<label class="col-lg-4 fw-bold text-muted">Country
			<i class="fas fa-exclamation-circle ms-1 fs-7" data-bs-toggle="tooltip" title="Country of origination"></i></label>
			<!--end::Label-->
			<!--begin::Col-->
			<div class="col-lg-8">
				<span class="fw-bolder fs-6 text-gray-800">@Artisan?.User?.Address?.Country.ToString()</span>
			</div>
			<!--end::Col-->
		</div>
		<!--end::Input group-->
		<!--begin::Input group-->
		<div class="row mb-7">
			<!--begin::Label-->
			<label class="col-lg-4 fw-bold text-muted">Email</label>
			<!--end::Label-->
			<!--begin::Col-->
			<div class="col-lg-8">
				<span class="fw-bolder fs-6 text-gray-800">@Artisan?.User?.Contact?.EmailAddress</span>
			</div>
			<!--end::Col-->
		</div>
		<!--end::Input group-->

	</div>
	<!--end::Card body-->
</div>
<!--end::details View-->

@code {
	CustomerViewArtisanLayout artisanLayout;
	[Parameter]
	public int ArtisanId { get; set; }
	[Parameter]
	public int OrderId { get; set; }
	bool IsLoading { get; set; }
	ArtisanDto Artisan { get; set; } = new();

	protected override async Task OnInitializedAsync()
	{
	    await AuthStateService.CheckAuthStatus();
	    Artisan = await ArtisanService.GetAsync(ArtisanId);
	}

	async Task AssignArtisan()
	{
		DisableButtons(true);
		var response = await OrderService.AssignArtisan(OrderId, ArtisanId);
		if (!response.IsComplete)
		{
		    ToastService.ShowAssignArtisanFailure();
		    DisableButtons(false);	
		}
	    Navigator.NavigateToViewOrderDetail(OrderId);
	}

	void DisableButtons(bool isLoading)
	{
		IsLoading = isLoading;
		StateHasChanged();
	}
}
